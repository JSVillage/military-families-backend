{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {

    // Babel handles strict for us so it should never be manually added
    "strict": [2, "never"],

    // Single quotes on JSX components
    "jsx-quotes": [2, "prefer-single"],

    // Indent 2 spaces always
    "indent": [2, 2],

    // Else returns are fine
    "no-else-return": [0],

    // Sometimes it's useful to shadow args
    "no-shadow": [0],

    "array-bracket-spacing": [0],

    // When things don't get reassigned let's be explicit about it
    "prefer-const": [0],

    // Don't worry about unnamed anonymous functions
    "func-names": [0],

    // Allow using function declarations before they are defined
    "no-use-before-define": [2, "nofunc"],

    // Console can be useful and can also be stripped about by webpack in prod
    "no-console": [0],

    // No spaces before function parentheses
    "space-before-function-paren": [2, "never"],

    // Don't require a `new` keyword when calling capitalized functons. Ex:
    // Immutable.Map({})
    "new-cap": [2, { "capIsNew": false }],

    // Having unsed args is allowed b/c its good for consistency and reminding
    // what vars are available. Ex: (req, res, next) => res.send(/* ... */)
    "no-unused-vars": [1, {"vars": "all", "args": "none"}],

    // Allow multiple components in a single file
    "react/no-multi-comp": [0],

    // For this plugin we disable prop types since this is not an actual react
    // app
    "react/prop-types": [0],

    // This was simply too anoying for a project that is not a react app
    "react/jsx-closing-bracket-location": [0],

  },
}
